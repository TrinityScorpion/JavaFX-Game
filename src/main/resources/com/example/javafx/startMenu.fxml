<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="box" prefHeight="400.0" prefWidth="600.0" style="-fx-background-image: url('menu.jpg')"  stylesheets="@../../../css/menustyle.css" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafx.BattleController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Pane fx:id="pane" prefHeight="50" prefWidth="50"  stylesheets="@../../../css/menustyle.css">
        <Button alignment="CENTER" layoutX="250" onAction="#startBattle" text="Start Battle" />
        <Label fx:id="alert" alignment="CENTER" contentDisplay="BOTTOM" layoutY="45.0" text="Choose Character" />
        <ChoiceBox fx:id="choiceBox1" layoutX="50" layoutY="100" onAction="#selectOneCharacter1" prefWidth="150.0" />
        <ChoiceBox fx:id="choiceBox2" layoutX="350" layoutY="100" onAction="#selectOneCharacter2" prefWidth="150.0" />
        <Label fx:id="character1" layoutX="10" layoutY="140" maxWidth="250" />
        <Label fx:id="character2" layoutX="300" layoutY="140" maxWidth="250" />
        <ImageView fx:id="firstPhoto" fitHeight="150.0" fitWidth="200.0" layoutX="60.0" layoutY="200.0" pickOnBounds="true" preserveRatio="true" />
        <ImageView fx:id="secondPhoto" fitHeight="150.0" fitWidth="200.0" layoutX="350.0" layoutY="200.0" pickOnBounds="true" preserveRatio="true" />
    </Pane>



</VBox>
